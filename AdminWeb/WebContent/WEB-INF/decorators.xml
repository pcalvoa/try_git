<?xml version="1.0" encoding="ISO-8859-1"?>

<decorators defaultdir="/decorators">
    <!-- Any urls that are excluded will never be decorated by Sitemesh -->
    <excludes>
        <pattern>/exclude/*</pattern>
        <pattern>/views/*/exclude/*</pattern>
        <pattern>/views/center/*</pattern>
        <pattern>/views/user/*</pattern>
        <pattern>/views/service/*</pattern>        
        <pattern>/views/client/*</pattern>
        <pattern>/logout.jsp</pattern>
    </excludes>

    <decorator name="basic" page="basic.jsp">
        <pattern>/*</pattern>
    </decorator>
	 
    <decorator name="admin" page="admin.jsp">
        <pattern>/views/client.jsp</pattern>        
    </decorator>

	<decorator name="main" page="main.jsp">
        <pattern>/views/centers/*</pattern>
        <pattern>/views/users/*</pattern>
        <pattern>/views/services/*</pattern>
        <pattern>/views/licenses/*</pattern>
    </decorator>    
	 
</decorators>
